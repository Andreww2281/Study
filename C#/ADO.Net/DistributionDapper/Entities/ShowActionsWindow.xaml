<Window x:Class="DistributionDapper.Entities.ShowActionsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DistributionDapper.Entities"
        mc:Ignorable="d"
        Title="ShowActionsWindow" Height="450" Width="800">
    <DataGrid AutoGenerateColumns="False"
              x:Name="MainDataGrid"
              Margin="5">
        <DataGrid.Columns>
            <DataGridTextColumn Width="35" Header="id" Binding="{Binding id}"/>
            <DataGridTextColumn Width="*" Header="Product Name" Binding="{Binding ProductName}" />
            <DataGridTextColumn Width="*" Header="Price" Binding="{Binding NewPrice}"/>
            <DataGridTextColumn Width="*" Header="Date start" Binding="{Binding DateStart}"/>
            <DataGridTextColumn Width="*" Header="Date end" Binding="{Binding DateEnd}"/>
        </DataGrid.Columns>
    </DataGrid>
</Window>
