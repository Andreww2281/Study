<Window x:Class="AnimationDZ.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AnimationDZ"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="20"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
        </Grid.RowDefinitions>

        <Menu>
            <MenuItem Header="Select folder with fotos (.jpg, .png)" x:Name="BTNOpenFolder" Click="BTNOpenFolder_Click"></MenuItem>
        </Menu>
        
        <Viewbox  Grid.Row="1" Margin="50">
            <Image x:Name="Slide" VerticalAlignment="Center"/>
        </Viewbox>
        
    </Grid>

</Window>
