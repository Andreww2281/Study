                <Button Grid.Column="10" Margin="2" Background="Yellow">)</Button>
                <Button Grid.Column="11" Margin="2" Background="LawnGreen">_</Button>
                <Button Grid.Column="12" Margin="2" Background="LawnGreen">+</Button>
                <Button Grid.Column="13" Margin="2" Background="Gray">Back Space</Button>
            </Grid>
            <Grid Grid.Row ="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1.5*"></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition Width="1.5*" ></ColumnDefinition>
                </Grid.ColumnDefinitions>


                <Button Margin="2" Background="Gray">Tab</Button>
                <Button Grid.Column="1" Margin="2" Background="MediumVioletRed">Q</Button>
                <Button Grid.Column="2" Margin="2 " Background="Yellow">W</Button>
                <Button Grid.Column="3" Margin="2" Background="LawnGreen">E</Button>
                <Button Grid.Column="4" Margin="2" Background="DodgerBlue">R</Button>
                <Button Grid.Column="5" Margin="2" Background="DodgerBlue">T</Button>
                <Button Grid.Column="6" Margin="2" Background="MediumPurple">Y</Button>
                <Button Grid.Column="7" Margin="2" Background="MediumPurple">U</Button>
