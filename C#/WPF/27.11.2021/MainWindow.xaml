                <RowDefinition></RowDefinition>
            </Grid.RowDefinitions>


            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition Width="2*" ></ColumnDefinition>
                </Grid.ColumnDefinitions>


                <Button Margin="2" Background="MediumVioletRed">~</Button>
                <Button Grid.Column="1" Margin="2" Background="MediumVioletRed">!</Button>
                <Button Grid.Column="2" Margin="2" Background="MediumVioletRed">@</Button>
                <Button Grid.Column="3" Margin="2" Background="Yellow">#</Button>
                <Button Grid.Column="4" Margin="2" Background="LawnGreen">$</Button>
                <Button Grid.Column="5" Margin="2" Background="DodgerBlue">%</Button>
                <Button Grid.Column="6" Margin="2" Background="DodgerBlue">^</Button>
