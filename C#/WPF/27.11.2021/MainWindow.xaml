            <RowDefinition Height="0.25*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>


        <GridSplitter Grid.Row ="1" HorizontalAlignment="Stretch" BorderBrush="Black" ResizeDirection="Rows"/>

       

        <Border Grid.Row ="1" BorderBrush="Red" BorderThickness="5">
            <TextBlock Background="Aquamarine" x:Name="InputText" FontSize="10" TextAlignment="Center"></TextBlock>
        </Border>

        <Grid Grid.Row="2" KeyDown="Grid_KeyDown" Name="GridMain">
